{
  "name": "Messenger Utilities",
  "description": "Utilities for Facebook Messenger",
  "version": "1.2.0",
  "manifest_version": 2,
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_title": "Messenger Utilities settings",
    "default_popup": "ui.html",
    "default_icon": {
      "16": "/icons/icon_16.png",
      "32": "/icons/icon_32.png",
      "48": "/icons/icon_48.png",
      "128": "/icons/icon_128.png"
    }
  },
  "options_page": "ui.html#/dashboard",
  "icons": {
    "16": "/icons/icon_16.png",
    "32": "/icons/icon_32.png",
    "48": "/icons/icon_48.png",
    "128": "/icons/icon_128.png"
  },
  "permissions": ["storage", "tabs", "scripting", "*://*.messenger.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.messenger.com/*"],
      "js": ["src/content.js"]
    }
  ]
}
